"use client"

import { useEffect, useState } from "react"
import { useSearchParams } from "next/navigation"
import { ArrowUp, Bot, User } from "lucide-react"
import { cn } from "@/lib/utils"

export default function AssistantPage() {
  const params = useSearchParams()
  const topic = params.get("topic") || "general"

  const [input, setInput] = useState("")
  const [messages, setMessages] = useState([
    {
      role: "assistant",
      content: "ðŸ‘‹ Welcome to Ztake AI Assistant!\n\nI can help you with integrations, API docs, onboarding, and anything from docs.ztake.in.\n\nHow can I help you today?",
    },
  ])

  // Auto-prompt based on topic
  useEffect(() => {
    if (topic && topic !== "general") {
      const topicTextMap: Record<string, string> = {
        "integration-guides": "integration guides and APIs",
        "video-tutorials": "video tutorials for integrations",
        "blog": "payment trends and insights from the blog",
      }

      const autoPrompt = topicTextMap[topic] || "Ztake documentation topics"

      setMessages((prev) => [
        ...prev,
        {
          role: "assistant",
          content: `ðŸ“Œ I see you're looking for **${autoPrompt}**.\nWhat exactly would you like to learn from docs.ztake.in?`,
        },
      ])
    }
  }, [topic])

  // Fake ChatGPT backend (replace with your backend later)
  const sendMessage = async () => {
    if (!input.trim()) return

    const newMessage = { role: "user", content: input }
    setMessages((prev) => [...prev, newMessage])
    setInput("")

    // Fake typing delay (replace with API request later)
    setTimeout(() => {
      setMessages((prev) => [
        ...prev,
        {
          role: "assistant",
          content:
            "Thanks for your question! I can help with Ztake integrations, APIs, payouts, static QR setup, and more.\n\n(Your real AI response will come here once API is connected.)",
        },
      ])
    }, 600)
  }

  const handleEnter = (e: any) => {
    if (e.key === "Enter") sendMessage()
  }

  return (
    <div className="min-h-screen flex flex-col bg-[#0D0D0F] text-white">
      {/* Header */}
      <header className="px-6 py-4 border-b border-white/10 flex items-center">
        <Bot className="w-6 h-6 text-primary mr-3" />
        <h1 className="text-xl font-semibold">Ztake AI Assistant</h1>
      </header>

      {/* Chat Body */}
      <div className="flex-1 overflow-y-auto p-6 space-y-4">
        {messages.map((msg, i) => (
          <div
            key={i}
            className={cn(
              "flex items-start max-w-3xl",
              msg.role === "user" ? "ml-auto" : "mr-auto"
            )}
          >
            <div
              className={cn(
                "rounded-2xl px-4 py-3 text-sm whitespace-pre-wrap leading-relaxed",
                msg.role === "assistant"
                  ? "bg-white/10 border border-white/10"
                  : "bg-primary text-black"
              )}
            >
              <div className="flex items-center mb-1 text-xs opacity-60">
                {msg.role === "assistant" ? (
                  <>
                    <Bot className="w-3 h-3 mr-1" /> Ztake AI
                  </>
                ) : (
                  <>
                    <User className="w-3 h-3 mr-1" /> You
                  </>
                )}
              </div>
              {msg.content}
            </div>
          </div>
        ))}
      </div>

      {/* Input Box */}
      <div className="border-t border-white/10 p-4">
        <div className="max-w-4xl mx-auto flex items-center space-x-3">
          <input
            className="flex-1 bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-sm outline-none focus:ring-2 ring-primary/40"
            placeholder="Ask anything about Ztake integrations, APIs, docsâ€¦"
            value={input}
            onChange={(e) => setInput(e.target.value)}
            onKeyDown={handleEnter}
          />
          <button
            onClick={sendMessage}
            className="px-4 py-3 bg-primary text-black rounded-xl hover:bg-primary/90 transition flex items-center"
          >
            <ArrowUp className="w-4 h-4" />
          </button>
        </div>
      </div>
    </div>
  )
}
